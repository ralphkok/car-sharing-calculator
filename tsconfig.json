{
  "compilerOptions": {
    "outDir": "build",
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "lib": ["es2015"]
}
